{
  "name": "sama-live-electron",
  "version": "0.3.3",
  "description": "A lightweight Electron app for streaming live TV from M3U/M3U8 playlists (Windows)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.sama-live",
    "productName": "Sama Live",
    "files": [
      "src/**/*",
      "package.json",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "matarrsama",
      "repo": "Sama-Live"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Sama Live",
      "artifactName": "Sama-Live-Setup-${version}.exe"
    }
  },
  "author": "Matarr Sama <matarrsama@gmail.com>",
  "license": "PROPRIETARY",
  "repository": {
    "type": "git",
    "url": "https://github.com/matarrsama/Sama-Live.git"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "hls.js": "^1.6.15",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.0"
  }
}
